# For RHEL/CentOS
sudo yum install -y \
    gcc \
    make \
    pam-devel \
    libcurl-devel \
    libmicrohttpd-devel \
    pkg-config

# For Ubuntu/Debian
sudo apt-get install -y \
    build-essential \
    libpam0g-dev \
    libcurl4-openssl-dev \
    libmicrohttpd-dev \
    pkg-config

CREATE OKTA CONFIGURATION

sudo tee /etc/pam_okta.conf << EOF
okta_domain=your-domain.okta.com
client_id=your-client-id
client_secret=your-client-secret
redirect_uri=http://localhost:8000/callback
EOF

sudo chmod 600 /etc/pam_okta.conf

sudo touch /var/log/pam_okta.log
sudo chmod 644 /var/log/pam_okta.log
